<%- include('partials/head') %>

<body class="signup">
  <section>
    <div class="auth-title">
      <h1>SIGN UP</h1>
      <div class="line"></div>
    </div>
    <div class="auth-container">
      <form action="">
        <div class="auth-input">
          <label for="id">아이디</label>
          <input type="text" name="id" id="id" placeholder="4 - 15자 이내로 입력해주세요." required>
        </div>
        <div class="auth-input">
          <label for="password">비밀번호</label>
          <input type="password" name="password" id="password" placeholder="최소 6자 이상(알파벳, 숫자 필수)" required>
        </div>
        <div class="auth-input">
          <label for="email">이메일</label>
          <input type="email" name="email" id="email" placeholder="test@gmail.com" required>
        </div>
        <div class="auth-input">
          <label for="name">실명</label>
          <input type="text" name="name" id="name" placeholder="홍길동" required>
        </div>
        <div class="auth-input">
          <label for="nickname">닉네임</label>
          <input type="text" name="nickname" id="nickname" placeholder="별명은 알파벳, 한글, 숫자로 20자 이하로 입력해주세요." required>
        </div>
        <button class="auth-btn">회원가입</button>
      </form>
      <div class="auth-status-container">
        <span>이미 회원이신가요?</span>
        <a href="/login">로그인</a>
      </div>
    </div>
  </section>
</body>

</html>